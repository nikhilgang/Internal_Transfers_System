{
	"info": {
		"name": "Internal Transfers API",
		"description": "API collection for the Internal Transfers service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						},
						"description": "Liveness probe â€” returns 200 OK if the server is running."
					},
					"response": []
				}
			]
		},
		{
			"name": "Accounts",
			"item": [
				{
					"name": "Create Account",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"account_id\": 1,\n\t\"initial_balance\": \"1000.00\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/accounts",
							"host": ["{{base_url}}"],
							"path": ["accounts"]
						},
						"description": "Create a new account with an initial balance. Returns 201 Created on success."
					},
					"response": []
				},
				{
					"name": "Create Account (Account 2)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"account_id\": 2,\n\t\"initial_balance\": \"500.00\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/accounts",
							"host": ["{{base_url}}"],
							"path": ["accounts"]
						},
						"description": "Create a second account for testing transfers."
					},
					"response": []
				},
				{
					"name": "Get Account by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/accounts/1",
							"host": ["{{base_url}}"],
							"path": ["accounts", "1"]
						},
						"description": "Retrieve an account by its ID. Returns account_id and balance."
					},
					"response": []
				}
			]
		},
		{
			"name": "Transactions",
			"item": [
				{
					"name": "Create Transfer",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"source_account_id\": 1,\n\t\"destination_account_id\": 2,\n\t\"amount\": \"100.00\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions",
							"host": ["{{base_url}}"],
							"path": ["transactions"]
						},
						"description": "Transfer funds from one account to another. Returns 201 Created on success."
					},
					"response": []
				}
			]
		}
	]
}
